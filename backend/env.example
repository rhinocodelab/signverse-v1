# API Settings
PROJECT_NAME="SignVerse API"
VERSION="1.0.0"
DESCRIPTION="SignVerse Backend API"

# Server Settings
HOST="0.0.0.0"
PORT=5001

# Security Settings
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"

# Database Settings
DATABASE_URL="postgresql+asyncpg://user:password@localhost/signverse"
POSTGRES_SERVER="localhost"
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"
POSTGRES_DB="signverse"

# Redis Settings
REDIS_URL="redis://localhost:6379"

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Environment
ENVIRONMENT="development"
DEBUG=true

# API Keys (optional - can also be stored in credential files)
OPENAI_API_KEY="sk-your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
GOOGLE_API_KEY="your-google-api-key-here"
GEMINI_API_KEY="your-gemini-api-key-here"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token-here"

# GCP Settings (optional - can also be stored in credential files)
GCP_PROJECT_ID="your-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"
# OR use GCP_SERVICE_ACCOUNT_KEY as JSON string instead of file path
# GCP_SERVICE_ACCOUNT_KEY='{"type": "service_account", "project_id": "your-project-id", ...}'
